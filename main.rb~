require 'sinatra'
require 'data'
require 'haml'

get '/' do
	erb :models
end

get '/login' do
  erb :login
end

post '/login' do
  if params[:user] == "admin" && params[:passwd] == "password"
    redirect '/admin'
  else
    "try again"
  end
end

get '/admin' do
  erb :admin
end

post '/admin' do
  entry = models.new  {make: params[:make], model: params[:model], price: params[:price] }
end
